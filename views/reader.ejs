<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Big Horn Guard</title>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

	<style type="text/css">
		html, body {
			height: 100%;
  			background-color: #f1f1f1;
		}

        @font-face {
            font-family: 'montserrat';
            src: url('fonts/Montserrat-Regular.otf');
        }

        @font-face {
            font-family: 'bebas';
            src: url('fonts/BebasNeue-Regular.otf');
        }

        .card{
            display: table-cell;
            height: 200px; 
            width: 20%;
            border-radius: 10px;
            vertical-align: middle;
            overflow: hidden;
            background-color: #555555;
            color: #fff;
        }

        .btn_setting{
            position: absolute;
            right: 20px;
            top:20px;
            color: white;
            font-size: 14px;
            cursor: pointer;
            opacity: 0;
        }
        .card:hover .btn_setting{
            opacity: 1;
        }
        .card:hover .btn_setting a{
            opacity: 1;
            color: white;
            cursor: hand !important;
        }

        .title-card{
            font-size: 34px;
            font-size: 2vw;
            height: 100px;
            background-color: rgba(255,255,255,0.15);
            position: relative;
            padding: 0 20px;
            line-height: 2vw;
            font-family: 'montserrat';
        }

        .value-card{
            font-size: 34px;
            font-size: 4.5vw;
            text-align: right;
            height: 100px;  
            position: relative;
            padding: 0 20px;
            font-family: 'bebas';   
        }

        .value-card small{
            font-size: 70%
        }
        
        .value-card p{
            margin: 0;
        }
        
        .card .title-card p, .card .value-card p{
            margin:0;
            position: relative;
            top: 50%;
            -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
        }

        .level{
            background-color: #16a086;
        }
        
        .pressure{
            background-color: #2a80b9;
        }
        
        .temperature{
            background-color: #f49c14;
        }
            
        .flow{
            background-color: #8f44ad;
        }
        
        .h2s{
            background-color: #c1392b;
        }

        .rpm{
            background-color: #2d3e50;
        }

        .gas{
            background-color: #808b8d;
        }
	</style>

</head>
<body onbeforeunload="resetSocket()">
    <% include nav %>

    <div class="container" style="margin-top: 50px">
    	<div class="row">
    		<div class="col-md-12">
    			<h3><time></time></h3>
    		</div>
    	</div>
    	<div id="rawData"></div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form class="form-horizontal" role="form" name="group" action="#" method="">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Save to dashboard</h4>
                </div>
                <div class="modal-body">

                    <input type="hidden" name="users_id" id="users_id" value="<%=users_id%>">   
                    <input type="hidden" name="sensor_id" id="sensor_id">
                    <div class="form-group">
                        <label for="source" class="col-sm-2 control-label">Groups</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="sensor_group" name="sensor_group" required>
                                <option value="">- SELECT -</option>
                            <% for(var i = 0; i < groups.length; i++) {%>
                                <option value="<%=groups[i].id%>"><%=groups[i].name%></option>    
                            <% } %>
                            </select>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" onclick="saveDashboard()" class="btn btn-primary">Save</button>
                </div>
                </form>
            </div>
        </div>
    </div>




<script src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
<script>
	var socket = io.connect('http://localhost:8000');
	socket.on('notification', function(res) {
		var element = "";

        console.log(res.data);

        var repeat = 0;
        var colorCard = ['level', 'pressure', 'temperature', 'flow', 'h2s', 'rpm', 'gas'];
		for (var i = 0;  i < res.data.push.length; i++) {
            
            if (repeat == 0) {
                element += '<div class="row">';
            }
            
            element += '<div class="col-md-3" style="padding: 8px;">';
            element += '<div class="card '+ colorCard[res.data.push[i].sensor_type] +'">';
            // element += '<div class="btn_setting"><a href="" class="  "><i class="glyphicon glyphicon-cog"></i></a></div>';
            element += '<div class="title-card">';
            element += '<p> <input type="hidden" name="senosrID" value="'+ res.data.push[i].sensor_id +'"> <a href="javascript:void(0)" class="btn btn-danger" id="modalAddDashboard" onclick="addDashboard('+ res.data.push[i].sensor_id +')"><i class="glyphicon glyphicon-plus"></i></a> '+res.data.push[i].sensor_name+'</p>';
            element += '</div>';
            element += '<div class="value-card">'
            element += '<p>'+res.data.push[i].sensor_value+' <small>'+res.data.push[i].sensor_coefficientUnit+'</small></p>';
            element += '</div>';
            element += '</div>';
            element += '</div>';

            if (repeat == 3) {
                element += '</div>';
                repeat = -1;
            }

            repeat++; 
		}
		
        // console.log(element);
        $("#rawData").html(element);
		
        var localeDateTime = new Date(res.time).toLocaleString(); 
		
        $('time').html(localeDateTime);
	})

    socket.on('connect', function () {
        console.log('connected to server');
    });

    socket.on('disconnect', function () {
        console.log('disconnected to server');
    });

    function resetSocket(){
        socket.close();
        console.log("RESET SOCKET");
    }

    function addDashboard(elementThis){
        $("#myModal").modal();
        $("#sensor_id").val(elementThis);
    }

    function saveDashboard(){
        var sensor_id = $("#sensor_id").val();
        var sensor_group = $("#sensor_group").val();
        var users_id = $('#users_id').val();
        $.ajax({
            url : '/xhr/saveDashboard',
            data : 'sensor='+sensor_id+'&group='+sensor_group+'&users_id='+users_id,
            type : 'POST',
            success : function(res){
                if (res) {
                    document.location = '/dashboard'
                }
            }
        })
    }
</script>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

</body>
</html>